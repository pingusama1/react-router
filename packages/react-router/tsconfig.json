{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    "strict": true,
    "jsx": "react",

    "declaration": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "."
  }
}
